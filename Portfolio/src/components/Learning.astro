---

type TLearning = {
	name: string;
	src: string;
};
const currentLearning: TLearning[] = [
	{
		name: "Angular",
		src: "/svg/angular.svg",
	},
	{
		name: "express",
		src: "/svg/expressjs.svg",
	},
	{
		name: "nodejs",
		src: "/svg/nodejs.svg",
	},
];
---

<section id="learning" class="grid place-content-center h-64 my-40">
  <div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-3">
    <h2 class="text-5xl text-center text-white  mb-2">Current Learning</h2>
    <span class="mb-6 ml-2 h-1 w-10 bg-white"></span>
  </div>

  <div class="flex items-center justify-center">
    <div class="flex flex-wrap gap-8 items-center justify-center">
      {
        currentLearning.map((img) => (
          <img
            src={img.src}
            alt={img.name}
            class="w-32 md:w-44 aspect-square  lg:w-56 hover:scale-110 duration-300 "
          />
        ))
      }
    </div>
  </div>
</section>
