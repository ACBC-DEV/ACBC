---
//import { proyects } from "../data/dataProyects";
import {getProjects} from '../utils/notion'

const proyects = await getProjects()
console.log(proyects)
---

<section
  id="projects"
  class="mb-10 flex flex-col items-center justify-center md:mb-0 md:h-screen"
>
  <h2 class="font-monospace text-2xl mb-2 text-white lg:text-4xl">Projects</h2>
  <span class="mb-10 h-1 w-10 bg-white"></span>
  <div class="mb-10 flex w-full flex-col flex-wrap items-center md:flex-row">
    {
      proyects.map((item) => (
        <section class="w-full p-4 md:w-1/2 lg:w-1/3">
          <article
            data-testid="card"
            class="rounded-3xl border-4 border-transparent hover:border-white md:border-8 bg-zinc-800 p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
          >
            <a target="_blank" href={item.link} aria-label="link to project">
              <div class="relative flex items-end overflow-hidden rounded-xl">
                <img
                  alt="project image"
                  width="400"
                  height="400"
                  class="w-full h-full object-cover aspect-square"
                  src={item.img}
                  loading="eager"
                  decoding="async"
                />
              </div>
              <div class="mt-1 p-2">
                <h3 class="text-xl text-orange lg:text-2xl">{item.name}</h3>
                <p>
                  
                  {
                    item.descripcion
                  }</p>
                <div class="mt-2 flex w-2/3 flex-row flex-wrap justify-between">
                  {item.tags.map((hs:string) => (
                    <span class="inline-block rounded py-2 text-xs text-black lg:py-1">
                      #{hs}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        </section>
      ))
    }
  </div>
</section>
