---
interface ImgType {
  src: string;
  name: string;
}
const imgs: ImgType[] = [
  { src: "../../svg/file-type-html.svg", name: "html icon" },
  { src: "../../svg/css.svg", name: "css icon" },
  { src: "../../svg/javascript-js.svg", name: "javascript icon" },
  { src: "../../svg/tailwind-css.svg", name: "tailwindcss icon" },
  { src: "../../svg/react.svg", name: "react icon" },
  { src: "../../svg/nextjs.svg", name: "nextjs icon" },
  { src: "../../svg/typescript-icon.svg", name: "typescript icon" },
  { src: "../../svg/astro_dark.svg", name: "astro" },
  { src: "../../svg/solidjs.svg", name: "solid-js" },
];
---

<section id="skills" class="mb-10 grid place-content-center h-screen">
  <div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-3">
    <h2 class="text-5xl text-white font-extrabold mb-2">Skills</h2>
    <span class="mb-6 ml-2 h-1 w-10 bg-white"></span>
  </div>

  <div class="flex items-center justify-center">
    <div class="flex flex-wrap gap-8 items-center justify-center">
      {
        imgs.map((img) => (
          <img
            src={img.src}
            alt={img.name}
            class="w-20 md:w-20 aspect-square lg:w-36 xl:w-40"
          />
        ))
      }
    </div>
  </div>
</section>
