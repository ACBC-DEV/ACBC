---
interface ImgType {
  src: string;
  name: string;
}
const imgs: ImgType[] = [
  { src: "../../public/svg/file-type-html.svg", name: "html icon" },
  { src: "../../public/svg/css.svg", name: "css icon" },
  { src: "../../public/svg/javascript-js.svg", name: "javascript icon" },
  { src: "../../public/svg/tailwind-css.svg", name: "tailwindcss icon" },
  { src: "../../public/svg/react.svg", name: "react icon" },
  { src: "../../public/svg/nextjs.svg", name: "nextjs icon" },
  { src: "../../public/svg/typescript-icon.svg", name: "typescript icon" },
  { src: "../../public/svg/astro.svg", name: "astro" },
  { src: "../../public/svg/solid.svg", name: "solid-js" },
];
---

<section id="skills" class="mb-10 grid place-content-center h-screen">
  <div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-3">
    <h2 class="text-5xl text-white font-extrabold mb-2">Skills</h2>
    <span class="mb-6 ml-2 h-1 w-10 bg-white"></span>
  </div>

  <div class="flex items-center justify-center">
    <div class="flex flex-wrap gap-5 items-center justify-center">
      {
        imgs.map((img) => (
          <div>
            <img
              src={img.src}
              alt={img.name}
              class="w-20 md:w-40 lg:w-52 xl:w-64"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
