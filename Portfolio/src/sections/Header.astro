---
type HeaderType = { text: string; id: string };
const headerList: HeaderType[] = [
  { text: "About", id: "about" },
  { text: "Skills", id: "skills" },
  { text: "Projects", id: "projects" },
  { text: "Learning", id: "learning" },
];
---

<nav class="my-3">
  <div class="flex items-center justify-center gap-x-2">
    {
      headerList.map((item, index) => (
        <a
          href={`#${item.id}`}
          class=" md:text-2xl px-2 py-1 rounded-3xl transition duration-300 hover:scale-110 hover:outline hover:outline-4 "
          tabindex="0"
        >
          {item.text}
        </a>
      ))
    }
  </div>
</nav>
