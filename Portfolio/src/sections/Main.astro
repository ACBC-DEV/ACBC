---
import GitHubSVG from "@svg/github.astro"; //'@svg/github.astro'
import LinkedinSVG from "@svg/linkedin.astro";
---

<script>
  import "@github/typing-effect-element";
</script>
<section
  class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
  <div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
    <h1 class="text-white text-6xl mt-10 text-center xl:text-9xl">
      Camilo Blandon
    </h1>
    <h2 class="text-white text-2xl text-center">
      <typing-effect data-lines='["Frontend Developer"]'>
        <span data-target="typing-effect.content"></span>
        <span data-target="typing-effect.cursor" class="font-bold">|</span>
      </typing-effect>
    </h2>

    <div class="grid place-content-center grid-flow-col gap-4 p-5">
      <a
        target="_blank"
        href="https://github.com/acbcdev"
        aria-label="link to github"
        tabindex="0"
      >
        <GitHubSVG
          class="w-10 fill-white h-10 duration-200 hover:fill-slate-500"
        />
      </a>
      <a
        target="_blank"
        href="https://www.linkedin.com/in/acbc-dev/"
        aria-label="link to linkedin"
        tabindex="0"
        ><LinkedinSVG
          class="fill-white w-10 h-10 rounded-lg duration-200 hover:fill-[#0A66C2]"
        />
      </a>
    </div>
  </div>
</section>
